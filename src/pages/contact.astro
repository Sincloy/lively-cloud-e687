---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Contact | ${SITE_TITLE}`} description="Get in touch with the Sincloy Games team" />
		<style>
			main {
				width: 960px;
				max-width: calc(100% - 2em);
				margin: 0 auto;
				padding: 3em 1em;
			}
			.page-title {
				margin-bottom: 0.5em;
			}
			.page-subtitle {
				margin-top: 0;
				color: rgb(var(--gray));
				font-weight: normal;
				font-size: 1.2em;
				margin-bottom: 2em;
			}
			.contact-grid {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 3em;
				margin: 3em 0;
			}
			@media (max-width: 768px) {
				.contact-grid {
					grid-template-columns: 1fr;
				}
			}
			.contact-info {
				line-height: 1.6;
			}
			.contact-section {
				margin-bottom: 2em;
			}
			.section-title {
				font-size: 1.4em;
				margin-bottom: 1em;
				color: rgb(var(--black));
				border-bottom: 1px solid #eee;
				padding-bottom: 0.5em;
			}
			.contact-item {
				margin-bottom: 1.5em;
			}
			.contact-label {
				font-weight: 600;
				margin-bottom: 0.3em;
				color: rgb(var(--accent));
			}
			.contact-value {
				margin: 0;
			}
			.email-link {
				color: rgb(var(--accent));
				text-decoration: none;
				font-weight: 500;
			}
			.email-link:hover {
				text-decoration: underline;
			}
			.social-links {
				display: flex;
				gap: 1em;
				margin-top: 1em;
			}
			.social-link {
				display: flex;
				align-items: center;
				gap: 0.5em;
				color: rgb(var(--gray-dark));
				text-decoration: none;
				padding: 0.5em 1em;
				border-radius: 4px;
				background-color: #f5f5f5;
				transition: background-color 0.3s ease;
			}
			.social-link:hover {
				background-color: #e5e5e5;
			}
			.social-icon {
				width: 24px;
				height: 24px;
			}
			.contact-form {
				background-color: #f9f9f9;
				padding: 2em;
				border-radius: 12px;
			}
			.form-group {
				margin-bottom: 1.5em;
			}
			.form-label {
				display: block;
				margin-bottom: 0.5em;
				font-weight: 500;
				color: rgb(var(--gray-dark));
			}
			.form-input,
			.form-textarea {
				width: 100%;
				padding: 0.8em;
				border: 1px solid #ddd;
				border-radius: 4px;
				font-family: inherit;
				font-size: 1em;
				background-color: white;
			}
			.form-textarea {
				min-height: 150px;
				resize: vertical;
			}
			.form-input:focus,
			.form-textarea:focus {
				outline: none;
				border-color: rgb(var(--accent));
				box-shadow: 0 0 0 2px rgba(var(--accent), 0.2);
			}
			.form-submit {
				display: inline-block;
				background-color: rgb(var(--accent));
				color: white;
				padding: 0.8em 1.5em;
				border: none;
				border-radius: 4px;
				font-weight: bold;
				cursor: pointer;
				font-size: 1em;
				font-family: inherit;
			}
			.form-submit:hover {
				background-color: rgb(var(--accent-dark, var(--accent)));
			}
			.form-note {
				margin-top: 1em;
				font-size: 0.9em;
				color: rgb(var(--gray));
			}
			.map-container {
				margin-top: 3em;
				border-radius: 12px;
				overflow: hidden;
				height: 400px;
				background-color: #f6f6f6;
				display: flex;
				justify-content: center;
				align-items: center;
				color: #888;
				font-style: italic;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1 class="page-title">Contact Us</h1>
			<h2 class="page-subtitle">Get in touch with the Sincloy Games team</h2>

			<div class="contact-grid">
				<div class="contact-info">
					<div class="contact-section">
						<h2 class="section-title">Contact Information</h2>
						
						<div class="contact-item">
							<div class="contact-label">General Inquiries</div>
							<p class="contact-value">
								<a href="mailto:info@sincloy.com" class="email-link">info@sincloy.com</a>
							</p>
						</div>
						
						<div class="contact-item">
							<div class="contact-label">Business & Partnerships</div>
							<p class="contact-value">
								<a href="mailto:business@sincloy.com" class="email-link">business@sincloy.com</a>
							</p>
						</div>
						
						<div class="contact-item">
							<div class="contact-label">Press & Media</div>
							<p class="contact-value">
								<a href="mailto:press@sincloy.com" class="email-link">press@sincloy.com</a>
							</p>
						</div>
						
						<div class="contact-item">
							<div class="contact-label">Careers</div>
							<p class="contact-value">
								<a href="mailto:careers@sincloy.com" class="email-link">careers@sincloy.com</a>
							</p>
						</div>
						
						<div class="contact-item">
							<div class="contact-label">Support</div>
							<p class="contact-value">
								<a href="mailto:support@sincloy.com" class="email-link">support@sincloy.com</a>
							</p>
						</div>
					</div>

					<div class="contact-section">
						<h2 class="section-title">Follow Us</h2>
						<p>Stay connected with us on social media for the latest updates, behind-the-scenes content, and community events.</p>
						
						<div class="social-links">
							<a href="https://x.com/Sincloy" target="_blank" class="social-link">
								<svg viewBox="0 0 24 24" aria-hidden="true" width="24" height="24" class="social-icon">
									<path fill="currentColor" d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
								</svg>
								Twitter
							</a>
							
							<a href="https://discord.gg/sincloy" target="_blank" class="social-link">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="social-icon">
									<path fill="currentColor" d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.946 2.4189-2.1568 2.4189Z"/>
								</svg>
								Discord
							</a>
						</div>
					</div>

					<div class="contact-section">
						<h2 class="section-title">Response Time</h2>
						<p>
							We aim to respond to all inquiries within 2-3 business days. For urgent matters, 
							please indicate this in your email subject line.
						</p>
					</div>
				</div>

				<div class="contact-form">
					<h2 class="section-title">Send Us a Message</h2>
					
					<form>
						<div class="form-group">
							<label for="name" class="form-label">Name</label>
							<input type="text" id="name" name="name" class="form-input" required>
						</div>
						
						<div class="form-group">
							<label for="email" class="form-label">Email</label>
							<input type="email" id="email" name="email" class="form-input" required>
						</div>
						
						<div class="form-group">
							<label for="subject" class="form-label">Subject</label>
							<select id="subject" name="subject" class="form-input" required>
								<option value="">Select a subject</option>
								<option value="general">General Inquiry</option>
								<option value="business">Business & Partnerships</option>
								<option value="press">Press & Media</option>
								<option value="careers">Careers</option>
								<option value="support">Support</option>
							</select>
						</div>
						
						<div class="form-group">
							<label for="message" class="form-label">Message</label>
							<textarea id="message" name="message" class="form-textarea" required></textarea>
						</div>
						
						<button type="submit" class="form-submit">Send Message</button>
						
						<p class="form-note">
							* This contact form is currently for demonstration purposes. 
							Please use the email addresses listed for actual inquiries.
						</p>
					</form>
				</div>
			</div>

			<div class="map-container">
				[Map: Distributed team with remote workers across North America and Europe]
			</div>
		</main>
		<Footer />
	</body>
</html>
